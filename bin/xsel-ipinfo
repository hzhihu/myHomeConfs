#!/bin/sh
# get ip address info from ip138.com selected words with google-translate
# and show it with libnotify
cd $(dirname $0)
DISPLAY=:0.0 notify-send -i /usr/share/pixmaps/chmsee-icon.png \
    -u normal -t 3000 Waiting ...
HOST=`/usr/bin/xsel -o`
TEXT=`./ipinfo.py """$HOST"""`
DISPLAY=:0.0 notify-send -i /usr/share/pixmaps/chmsee-icon.png \
	 -u normal -t 8000  来自ip138： """$HOST:\n$TEXT"""
#echo $TEXT
